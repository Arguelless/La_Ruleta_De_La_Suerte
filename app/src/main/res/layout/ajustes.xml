<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.JuegoActivity">

    <!-- Botón atrás -->

    <!-- Título -->

    <!-- Sonido -->

    <!-- Monedas -->

    <!-- Música -->

    <!-- Efectos de sonido -->

    <!-- Botón cambiar canción -->

    <!-- Botón cambiar idioma -->

    <!-- Botón cerrar sesión -->

    <Button
        android:id="@+id/logOutButton"
        android:layout_width="231dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="@string/btnCerrarSesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selecIdioma" />

    <TextView
        android:id="@+id/sonidoText"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/Sonido"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ajustesHead" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/musicaSwitch"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="148dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/MusicaText"
        app:layout_constraintStart_toStartOf="@id/MusicaText"
        app:layout_constraintTop_toTopOf="@id/MusicaText"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/resetMonedas"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="148dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="@string/setting_reset"
        app:layout_constraintBottom_toBottomOf="@id/monedasText"
        app:layout_constraintStart_toStartOf="@id/monedasText"
        app:layout_constraintTop_toTopOf="@id/monedasText"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sonidoSwitch"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="148dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/sonidoText"
        app:layout_constraintStart_toStartOf="@id/sonidoText"
        app:layout_constraintTop_toTopOf="@id/sonidoText"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sonidoSwitch2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="148dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/sonidoText2"
        app:layout_constraintStart_toStartOf="@id/sonidoText2"
        app:layout_constraintTop_toTopOf="@id/sonidoText2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/MusicaText"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/Musica"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monedasText" />

    <TextView
        android:id="@+id/sonidoText2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/selectEfectosSonido"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MusicaText" />

    <TextView
        android:id="@+id/monedasText"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/Coins"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sonidoText" />

    <TextView
        android:id="@+id/ajustesHead"
        android:layout_width="196dp"
        android:layout_height="57dp"
        android:layout_marginTop="104dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/ajustes"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/back_button4"
        android:layout_width="81dp"
        android:layout_height="36dp"
        android:layout_marginTop="104dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/navigation_drawer_close"
        android:maxWidth="48dp"
        android:maxHeight="48dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back"
        app:layout_constraintEnd_toStartOf="@id/ajustesHead"
        app:layout_constraintHorizontal_bias="0.688"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/selecMusica"
        android:layout_width="231dp"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="@string/btnCambiarCancion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sonidoText2" />

    <Button
        android:id="@+id/selecIdioma"
        android:layout_width="231dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="@string/btnCambiarIdioma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selecMusica" />

</androidx.constraintlayout.widget.ConstraintLayout>
