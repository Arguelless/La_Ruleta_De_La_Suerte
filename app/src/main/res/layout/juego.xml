<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Botón de ajustes con ícono de engranaje -->
    <ImageButton
        android:id="@+id/btnAjustes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_preferences"
        android:contentDescription="Ajustes" />

    <!-- Imagen de la ruleta -->
    <ImageView
        android:id="@+id/ruletaImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ruleta" />

    <!-- Botón de girar -->
    <Button
        android:id="@+id/botonGirar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡GIRAR!"
        android:layout_below="@id/ruletaImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

</RelativeLayout>